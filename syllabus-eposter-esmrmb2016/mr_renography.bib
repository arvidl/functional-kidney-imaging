@Article{Luo2013,
  Title                    = {Segmentation of abdomen MR images using kernel graph cuts with shape priors.},
  Author                   = {Luo, Qing and Qin, Wenjian and Wen, Tiexiang and Gu, Jia and Gaio, Nikolas and Chen, Shifu and Li, Ling and Xie, Yaoqin},

  Url                      = {http://dx.doi.org/10.1002/jmri.25171}
}

@Article{Barnes2014a,
  Title                    = {Modeling the effect of intra-voxel diffusion of contrast agent on the quantitative analysis of dynamic contrast enhanced magnetic resonance imaging.},
  Author                   = {Barnes, Stephanie L. and Quarles, C Chad and Yankeelov, Thomas E.},

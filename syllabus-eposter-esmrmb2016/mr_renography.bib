  Medline-pst              = {ppublish},
  Owner                    = {arvid},
  Pmid                     = {26685229},
  Timestamp                = {2016.09.13},
  Url                      = {http://dx.doi.org/10.1109/TMI.2015.2509463}
}

@Article{Zhang2015a,

@Article{Zheng2014,
  Title                    = {Renal Oxygenation Characteristics in Healthy Native Kidneys: Assessment with Blood Oxygen Level-Dependent Magnetic Resonance Imaging.},
  Author                   = {Zheng, Zhenfeng and Shi, Huilan and Ma, Hui and Li, Fengtan and Zhang, Jing and Zhang, Yunting},

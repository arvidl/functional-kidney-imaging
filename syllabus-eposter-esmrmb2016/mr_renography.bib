@Article{Yang2016,
  Title                    = {Renal compartment segmentation in DCE-MRI images.},
  Author                   = {Yang, Xin and {Le Minh}, Hung and {Tim Cheng}, Kwang-Ting and Sung, Kyung Hyun and Liu, Wenyu},

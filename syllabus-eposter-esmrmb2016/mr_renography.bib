@Article{Gloger2012,
  Title                    = {Prior shape level set segmentation on multistep generated probability maps of MR datasets for fully automatic kidney parenchyma volumetry.},
  Author                   = {Gloger, Oliver and T{\"{o}}nies, Klaus Dietz and Liebscher, Volkmar and Kugelmann, Bernd and Laqua, Rene and V{\"{o}}lzke, Henry},
